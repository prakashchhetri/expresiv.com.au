---
import Container from "./Container.astro";
import Button from "./Button.astro";
import Sparkles from "./ui/Sparkles";

const {
  title = "High-Converting Websites for Local Businesses",
  subtitle = "Expresiv pairs brand strategy, UX craft and modern engineering to launch premium websites that grow your brand and your bottom line.",
  primaryLabel = "Get Your Free Audit",
  primaryLink = "/contact",
  secondaryLabel = "See recent work",
  secondaryLink = "/work",
  image = "/images/ai_banner.png",
} = Astro.props;

const stats = [
  { value: "120+", label: "Web launches delivered" },
  { value: "4.9/5", label: "Average client rating" },
  { value: "3x", label: "Faster go-to-market" },
];
---
<section class="relative isolate overflow-hidden pt-28 lg:pt-40 pb-20 lg:pb-32 bg-gradient-to-br from-[#05050d] via-[#0f0f1c] to-[#1b1230] text-white fade-in">
  <Container>
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div>
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/20 bg-white/5 text-sm uppercase tracking-wide text-white/80 mb-6">
          <span class="h-2 w-2 rounded-full bg-primary"></span>
          Full-service digital studio
        </div>
        <h1 class="font-extrabold text-4xl sm:text-5xl lg:text-6xl leading-tight mb-4">{title}</h1>
        <div class="relative w-full max-w-[40rem] h-40">
          <div class="absolute inset-x-20 top-0 bg-gradient-to-r from-transparent via-indigo-500 to-transparent h-[2px] w-3/4 blur-sm"></div>
          <div class="absolute inset-x-20 top-0 bg-gradient-to-r from-transparent via-indigo-500 to-transparent h-px w-3/4"></div>
          <div class="absolute inset-x-60 top-0 bg-gradient-to-r from-transparent via-sky-500 to-transparent h-[5px] w-1/4 blur-sm"></div>
          <div class="absolute inset-x-60 top-0 bg-gradient-to-r from-transparent via-sky-500 to-transparent h-px w-1/4"></div>
          <Sparkles client:visible background="transparent" minSize={0.3} maxSize={0.8} particleDensity={10} className="w-full h-full" particleColor="rgba(255,255,255,0.8)" speed={10} />
          <div class="absolute inset-0 w-full h-full bg-black [mask-image:radial-gradient(350px_200px_at_top,transparent_20%,white)]"></div>
        </div>
        <p class="text-lg lg:text-xl text-white/90 mb-10 max-w-xl">{subtitle}</p>
        <div class="flex flex-wrap gap-4">
          <Button href={primaryLink} size="lg" variant="primary">{primaryLabel}</Button>
          <Button href={secondaryLink} size="lg" variant="secondary">{secondaryLabel}</Button>
        </div>
        <div class="mt-10 grid sm:grid-cols-3 gap-6 rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur">
          {stats.map(item => (
            <div>
              <p class="text-2xl font-semibold">{item.value}</p>
              <p class="text-sm text-white/70">{item.label}</p>
            </div>
          ))}
        </div>
      </div>
      <div class="relative">
        <img src={image} alt="Hero Illustration" class="w-full max-w-lg mx-auto lg:mx-0 drop-shadow-xl" loading="lazy" width="600" height="500" />
      </div>
    </div>
  </Container>
</section>  