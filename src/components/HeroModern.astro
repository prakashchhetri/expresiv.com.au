---
import Container from "./Container.astro";
import Button from "./Button.astro";

const {
  title = "Empowering Small Businesses with Smart Digital Solutions",
  subtitle = "Websites, applications and marketing strategies built to help your brand grow and thrive in today\'s market.",
  primaryLabel = "Get a Free Quote",
  primaryLink = "/contact",
  secondaryLabel = "Our Work",
  secondaryLink = "/work",
  image = "/images/ai_banner.png",
} = Astro.props;
---
<section class="relative isolate overflow-hidden pt-28 lg:pt-40 pb-20 lg:pb-32 bg-gradient-to-br from-primary to-purple-500/80 dark:from-gray-800 dark:to-gray-900 text-white fade-in">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-white/10 via-primary/10 to-purple-600/20 dark:from-gray-700/10"></div>
  <Container>
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div>
        <h1 class="font-extrabold text-4xl sm:text-5xl lg:text-6xl leading-tight mb-6">{title}</h1>
        <p class="text-lg lg:text-xl text-white/90 mb-10 max-w-xl">{subtitle}</p>
        <div class="flex flex-wrap gap-4">
          <Button href={primaryLink} size="lg" variant="primary">{primaryLabel}</Button>
          <Button href={secondaryLink} size="lg" variant="secondary">{secondaryLabel}</Button>
        </div>
      </div>
      <div class="relative">
        <img src={image} alt="Hero Illustration" class="w-full max-w-lg mx-auto lg:mx-0 drop-shadow-xl" loading="lazy" width="600" height="500" />
      </div>
    </div>
  </Container>
</section> 