---
import Container from "./Container.astro";
import { Award, Rocket, ShieldCheck, Layers3 } from "lucide-react";
import WavyBackground from "./ui/WavyBackground";

const features = [
  { icon: Rocket, title: "Fast Delivery", description: "Launch your project in as little as one week without compromising on quality." },
  { icon: ShieldCheck, title: "Secure & Reliable", description: "We follow industry best-practices to keep your data and your customers safe." },
  { icon: Layers3, title: "Scalable Architecture", description: "Our solutions are built to grow with your business, from MVP to enterprise." },
  { icon: Award, title: "Premium Design", description: "Pixel-perfect UI that elevates your brand and delights your customers." },
];
---
<section class="py-24 lg:py-32 fade-in">
  <WavyBackground client:visible backgroundFill="transparent" speed="slow" waveOpacity={0.35} colors={["#818cf8", "#22d3ee", "#3b82f6"]}>
    <Container>
      <div class="text-center max-w-2xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Why Choose Expresiv</h2>
        <p class="text-gray-600 dark:text-gray-300">We combine cutting-edge technology with creative vision to deliver solutions that make an impact.</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-10">
        {features.map(f => (
          <div class="text-center p-6 rounded-xl bg-white dark:bg-gray-800 shadow-sm hover:shadow-md transition">
            <f.icon className="h-10 w-10 text-primary mx-auto mb-4" />
            <h3 class="font-semibold text-lg text-gray-900 dark:text-white mb-2">{f.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{f.description}</p>
          </div>
        ))}
      </div>
    </Container>
  </WavyBackground>
</section> 