---
import Container from "./Container.astro";
import { Award, Rocket, ShieldCheck, Layers3 } from "lucide-react";
import WavyBackground from "./ui/WavyBackground";

const features = [
  { icon: Rocket, title: "Launch Faster", description: "We use strategic sprints to compress discovery, design, and buildâ€”getting your brand to market in weeks, not months." },
  { icon: ShieldCheck, title: "Enterprise Security", description: "Bank-grade security and performance budgets are baked in, ensuring your site is fast, safe, and reliable." },
  { icon: Layers3, title: "Built for Growth", description: "Scalable architecture means your digital presence grows with your business, without needing a rebuild." },
  { icon: Award, title: "Premium Experience", description: "World-class design and user experience that elevates your brand and builds instant trust with customers." },
];
---
<section class="py-24 lg:py-32 fade-in">
  <WavyBackground client:visible backgroundFill="transparent" speed="slow" waveOpacity={0.35} colors={["#818cf8", "#22d3ee", "#3b82f6"]}>
    <Container>
      <div class="text-center max-w-2xl mx-auto mb-16">
        <p class="text-xs uppercase tracking-[0.3em] text-primary mb-4">How we work</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Flexible delivery without compromise</h2>
        <p class="text-gray-600 dark:text-gray-300">Every engagement pairs senior strategists with builders so you get tangible outcomes, not endless decks.</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map(f => (
          <div class="relative group rounded-2xl border border-white/0 bg-white/80 dark:bg-gray-900/60 p-8 shadow-sm overflow-hidden">
            <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition bg-gradient-to-br from-primary/10 via-transparent to-purple-500/10"></div>
            <div class="relative">
              <div class="h-12 w-12 rounded-2xl bg-primary/10 text-primary flex items-center justify-center mb-5">
                <f.icon className="h-6 w-6" />
              </div>
              <h3 class="font-semibold text-lg text-gray-900 dark:text-white mb-3">{f.title}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{f.description}</p>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </WavyBackground>
</section> 