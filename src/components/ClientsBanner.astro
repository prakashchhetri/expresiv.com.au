---
import Container from "./Container.astro";

const clients = [
  "airbnb.svg",
  "google-cloud.svg",
  "beautyandnails.svg",
  "ge.svg",
  "microsoft.svg",
  "netflix.svg",
  "hoistcare.png",
  "pwg.png",
];
---
<section class="py-16 fade-in bg-gray-50 dark:bg-gray-900">
  <Container>
    <div class="text-center mb-10 max-w-3xl mx-auto">
      <p class="text-xs uppercase tracking-[0.2em] text-gray-500">Trusted partners</p>
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mt-3">Trusted by leading brands</h3>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8 items-center opacity-80 grayscale hover:opacity-100 hover:grayscale-0 transition">
      {clients.map(name => (
        <img src={`/images/clients/${name}`} alt={name.replace(/\.(svg|png)$/,"")} class="mx-auto h-8 w-auto object-contain" loading="lazy" width="120" height="32" />
      ))}
    </div>
  </Container>
</section>