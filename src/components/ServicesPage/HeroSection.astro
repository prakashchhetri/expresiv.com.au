---
import Container from "../Container.astro";
import Button from "../Button.astro";
const { title, description, buttonText, buttonLink = '#', image } = Astro.props;
---
<section class="relative isolate overflow-hidden bg-gradient-to-br from-primary/10 via-purple-100 to-white dark:from-gray-800 dark:via-gray-900 dark:to-gray-900">
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-primary/10 via-white/20 to-transparent dark:from-gray-700/20"></div>
    <Container>
        <div class="grid lg:grid-cols-2 gap-12 items-center pt-28 pb-20 lg:pt-32 lg:pb-24 fade-in">
            <div>
                <h1 class="leading-tight text-gray-900 dark:text-white font-extrabold text-4xl md:text-5xl xl:text-6xl">{title}</h1>
                {description && (
                    <p class="mt-6 text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-2xl">{description}</p>
                )}
                <div class="mt-10">
                    <Button href={buttonLink} size="lg" variant="primary">{buttonText}</Button>
                </div>
            </div>
            {image && (
                <div class="relative">
                    <img src={image} alt="Service banner" class="w-full max-w-xl mx-auto rounded-2xl shadow-xl ring-1 ring-black/5 dark:ring-white/10" loading="lazy" width="960" height="720" />
                </div>
            )}
        </div>
    </Container>
</section>
