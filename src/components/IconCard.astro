---
const { title, description, icon, url } = Astro.props;
---

<div class="border-solid border border-[#E4E4E7] p-8 rounded-3xl relative overflow-hidden iconCard dark:text-white">
    <a href={url} class="block h-full w-full">
        <div aria-hidden="true" class="absolute inset-0 top-[-20px]">
            <div class="light-bg blur-[50px] h-10"></div>
        </div>
        <div class="bg-gradient-to-br from-purple-100 to-blue-100 rounded-3xl h-[60px] w-[60px] p-3 flex items-center justify-center">
            <img src={icon} alt={title} />
        </div>
        <h4 class="mt-5 text-lg font-semibold">{title}</h4>
        <p class="mt-1">{description}</p>
    </a>
</div>
