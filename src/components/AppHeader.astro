---
import Container from "./Container.astro";
import Button from "./Button.astro";
---

<header>
    <nav class="z-10 w-full absolute">
        <Container>
            <div
                class="flex flex-wrap items-center justify-between py-2 gap-6 md:py-4 md:gap-0 relative"
            >
                <input
                    aria-hidden="true"
                    type="checkbox"
                    name="toggle_nav"
                    id="toggle_nav"
                    class="hidden peer"
                />
                <div
                    class="relative z-20 w-full flex justify-between lg:w-max md:px-0"
                >
                    <a
                        href="/"
                        data-astro-prefetch
                        aria-label="extresiv."
                        class="flex space-x-2 items-center"
                    >
                        <!--<div aria-hidden="true" class="flex space-x-1">-->
                        <!--    <div class="h-4 w-4 rounded-full bg-gray-900 dark:bg-white"></div>-->
                        <!--    <div class="h-6 w-2 bg-primary"></div>-->
                        <!--</div>-->
                        <span
                            class="text-2xl font-medium text-gray-900 dark:text-white"
                            >expresiv.</span
                        >
                    </a>

                    <!-- Dark mode toggle -->
                    <button id="theme-toggle" aria-label="Toggle dark mode" class="ml-4 p-2 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/50 lg:ml-8">
                        <svg id="theme-toggle-light-icon" class="h-5 w-5 text-gray-800 dark:hidden" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path d="M10 16a6 6 0 100-12 6 6 0 000 12z"></path>
                        </svg>
                        <svg id="theme-toggle-dark-icon" class="h-5 w-5 text-gray-200 hidden dark:block" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                          <path fill-rule="evenodd" d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" clip-rule="evenodd"></path>
                        </svg>
                    </button>

                    <div class="relative flex items-center lg:hidden max-h-10">
                        <label
                            role="button"
                            for="toggle_nav"
                            aria-label="humburger"
                            id="hamburger"
                            class="relative p-6 -mr-6"
                        >
                            <div
                                aria-hidden="true"
                                id="line"
                                class="m-auto h-0.5 w-5 rounded bg-sky-900 dark:bg-gray-300 transition duration-300"
                            >
                            </div>
                            <div
                                aria-hidden="true"
                                id="line2"
                                class="m-auto mt-2 h-0.5 w-5 rounded bg-sky-900 dark:bg-gray-300 transition duration-300"
                            >
                            </div>
                        </label>
                    </div>
                </div>
                <div
                    aria-hidden="true"
                    class="fixed z-10 inset-0 h-screen w-screen bg-white/70 backdrop-blur-2xl origin-bottom scale-y-0 transition duration-500 peer-checked:origin-top peer-checked:scale-y-100 lg:hidden dark:bg-gray-900/70"
                >
                </div>
                <div
                    class="fixed z-20 top-0 right-0 h-screen w-64 flex flex-col gap-6 p-8 bg-white dark:bg-gray-800 shadow-2xl transform transition-transform duration-300 translate-x-full peer-checked:translate-x-0 lg:static lg:flex-row lg:items-center lg:h-auto lg:w-auto lg:p-0 lg:bg-transparent lg:shadow-none lg:translate-x-0"
                >
                    <div
                        class="text-gray-800 dark:text-gray-300 lg:pr-4 lg:w-auto w-full lg:pt-0"
                    >
                        <ul
                            class="tracking-wide font-medium lg:text-sm flex-col flex lg:flex-row gap-6 lg:gap-0"
                        >
                            <li>
                                <a
                                    href="/services"
                                    data-astro-prefetch
                                    class="block md:px-4 transition hover:text-primary"
                                >
                                    <span>Services</span>
                                </a>
                            </li>
                            <li>
                                <a
                                        href="/services"
                                        data-astro-prefetch
                                        class="block md:px-4 transition hover:text-primary"
                                >
                                    <span>Products</span>
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/news-insight"
                                    data-astro-prefetch
                                    class="block md:px-4 transition hover:text-primary"
                                >
                                    <span>News & Insights</span>
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/testimonials"
                                    data-astro-prefetch
                                    class="block md:px-4 transition hover:text-primary"
                                >
                                    <span>Testimonials</span>
                                </a>
                            </li> 
                            <li>
                                <a
                                    href="/work"
                                    data-astro-prefetch
                                    class="block md:px-4 transition hover:text-primary"
                                >
                                    <span>Work</span>
                                </a>
                            </li>

                        </ul>
                    </div>

                    <div class="mt-12 lg:mt-0">
                        <Button href="/contact" size="sm" variant="primary">Get Started</Button>
                    </div>
                </div>
            </div>
        </Container>
    </nav>
</header>

<style>
    #toggle_nav:checked ~ div #hamburger #line {
        @apply rotate-45 translate-y-1.5;
    }

    #toggle_nav:checked ~ div #hamburger #line2 {
        @apply -rotate-45 -translate-y-1;
    }
</style>

<script is:inline>
(() => {
  const storageKey = 'theme';
  const classNameDark = 'dark';
  const html = document.documentElement;
  const toggleBtn = document.getElementById('theme-toggle');

  const applyTheme = (theme) => {
    if (theme === 'dark') {
      html.classList.add(classNameDark);
    } else {
      html.classList.remove(classNameDark);
    }
  };

  // Initial
  const stored = localStorage.getItem(storageKey);
  const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
  applyTheme(stored ? stored : systemPrefersDark ? 'dark' : 'light');

  toggleBtn && toggleBtn.addEventListener('click', () => {
    const current = html.classList.contains(classNameDark) ? 'dark' : 'light';
    const next = current === 'dark' ? 'light' : 'dark';
    applyTheme(next);
    localStorage.setItem(storageKey, next);
  });
})();
</script>
