---
import Layout from "../layouts/Layout.astro";
---

<Layout title="SEO Audit Snapshot | Expresiv">
  <main class="space-y-16 py-20">
    <!-- Hero Section -->
    <section class="fade-in bg-gradient-to-br from-green-500/5 via-transparent to-blue-500/5 py-16">
      <div class="mx-auto max-w-4xl px-4 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-500/10 rounded-2xl mb-6">
          <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-4">
          SEO Audit & Analysis
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Get a comprehensive SEO analysis of your website. Check technical SEO, performance, Core Web Vitals, and get actionable recommendations to improve your search rankings.
        </p>
        
        <!-- Analysis Form -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 max-w-2xl mx-auto">
          <form id="audit-form" class="space-y-6">
            <div class="space-y-4">
              <div class="relative">
                <input 
                  id="url" 
                  name="url" 
                  placeholder="Enter your website URL (e.g., https://example.com)" 
                  class="w-full px-6 py-4 text-lg rounded-xl border-2 border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:border-primary focus:ring-4 focus:ring-primary/20 transition-all duration-200" 
                  required 
                />
                <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                </div>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="flex items-center space-x-3">
                    <label for="device" class="text-sm font-medium text-gray-700 dark:text-gray-300">Device:</label>
                    <select 
                      id="device" 
                      name="device" 
                      class="px-4 py-2 rounded-lg border border-gray-200 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:border-primary focus:ring-2 focus:ring-primary/20"
                    >
                      <option value="mobile" selected>Mobile</option>
                      <option value="desktop">Desktop</option>
                    </select>
                  </div>
                  <label class="flex items-center space-x-2 text-sm text-gray-700 dark:text-gray-300">
                    <input 
                      id="bypass-cache" 
                      type="checkbox" 
                      class="rounded border-gray-300 text-primary focus:ring-primary/20"
                    />
                    <span>Force fresh analysis</span>
                  </label>
                </div>
                <button 
                  type="submit" 
                  id="analyze-btn"
                  class="px-8 py-4 bg-gradient-to-r from-green-500 to-blue-600 text-white font-semibold rounded-xl hover:from-green-500/90 hover:to-blue-600/90 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                >
                  <span id="btn-text" class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Analyze SEO</span>
                  </span>
                  <span id="btn-loading" class="hidden flex items-center space-x-2">
                    <svg class="animate-spin w-5 h-5 text-white" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Analyzing...</span>
                  </span>
                </button>
              </div>
            </div>
          </form>
          
          <div id="error" class="hidden mt-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl text-red-700 dark:text-red-300 text-sm"></div>
          
          <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl">
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="text-sm text-blue-800 dark:text-blue-200">
                <p class="font-medium mb-1">What we analyze:</p>
                <p>Technical SEO elements, page performance, Core Web Vitals, mobile-friendliness, and crawlability. Get actionable recommendations to improve your search rankings.</p>
                <p class="mt-2">
                  <strong>Related Tool:</strong> 
                  <a href="/competitor-analysis" class="underline hover:no-underline">Try our Competitor Analysis tool</a> to see who you're competing against in search results.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="results-section" class="fade-in">
      <div class="mx-auto max-w-6xl px-4">
        <!-- Loading Indicator -->
        <div id="loader" class="hidden">
          <div class="text-center py-12">
            <div class="inline-flex items-center justify-center w-16 h-16 mb-4">
              <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-green-500"></div>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Analyzing Your Website</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">This may take 10-30 seconds...</p>
            <div class="max-w-md mx-auto">
              <div class="bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div id="progress-bar" class="bg-green-500 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
              </div>
              <p id="progress-text" class="text-sm text-gray-500 dark:text-gray-400 mt-2">Initializing SEO audit...</p>
            </div>
          </div>
        </div>
        
        <!-- Results -->
        <div id="results" class="hidden">
          <!-- SEO Score Overview -->
          <div id="score-overview" class="mb-8"></div>
          
          <!-- Detailed Analysis -->
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mb-8">
            <div id="meta-analysis"></div>
            <div id="technical-analysis"></div>
            <div id="performance-analysis"></div>
          </div>
          
          <!-- Issues and Recommendations -->
          <div id="issues" class="mt-8"></div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  // @ts-nocheck
  const form = document.getElementById('audit-form');
  const urlEl = document.getElementById('url');
  const deviceEl = document.getElementById('device');
  const bypassCacheEl = document.getElementById('bypass-cache');
  const errorEl = document.getElementById('error');
  const loader = document.getElementById('loader');
  const results = document.getElementById('results');
  const scoreOverviewEl = document.getElementById('score-overview');
  const metaAnalysisEl = document.getElementById('meta-analysis');
  const technicalAnalysisEl = document.getElementById('technical-analysis');
  const performanceAnalysisEl = document.getElementById('performance-analysis');
  const issuesEl = document.getElementById('issues');
  const analyzeBtn = document.getElementById('analyze-btn');
  const btnText = document.getElementById('btn-text');
  const btnLoading = document.getElementById('btn-loading');
  const progressBar = document.getElementById('progress-bar');
  const progressText = document.getElementById('progress-text');

  // Progress simulation
  function simulateProgress() {
    const steps = [
      { progress: 10, text: 'Fetching page content...' },
      { progress: 25, text: 'Analyzing SEO elements...' },
      { progress: 40, text: 'Checking technical SEO...' },
      { progress: 55, text: 'Analyzing robots.txt...' },
      { progress: 70, text: 'Running performance tests...' },
      { progress: 85, text: 'Calculating SEO score...' },
      { progress: 100, text: 'Generating recommendations...' }
    ];

    let currentStep = 0;
    const interval = setInterval(() => {
      if (currentStep < steps.length) {
        const step = steps[currentStep];
        progressBar.style.width = `${step.progress}%`;
        progressText.textContent = step.text;
        currentStep++;
      } else {
        clearInterval(interval);
      }
    }, 500);

    return interval;
  }

  function showLoading() {
    loader.classList.remove('hidden');
    results.classList.add('hidden');
    analyzeBtn.disabled = true;
    btnText.classList.add('hidden');
    btnLoading.classList.remove('hidden');
    simulateProgress();
  }

  function hideLoading() {
    loader.classList.add('hidden');
    results.classList.remove('hidden');
    analyzeBtn.disabled = false;
    btnText.classList.remove('hidden');
    btnLoading.classList.add('hidden');
    progressBar.style.width = '0%';
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const url = urlEl.value.trim();
    const device = deviceEl.value;
    const bypassCache = bypassCacheEl.checked;
    
    if (!url) {
      errorEl.textContent = 'Please enter a URL to analyze';
      errorEl.classList.remove('hidden');
      return;
    }
    
    errorEl.classList.add('hidden');
    showLoading();
    
    try {
      const response = await fetch('https://serp-analysis.expresiv.com.au/api/seo-audit/', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          url: url,
          device: device,
          bypass_cache: bypassCache
        })
      });
      
      const data = await response.json();
      
      if (!response.ok) {
        throw new Error(data.error || 'Analysis failed');
      }
      
      // Simple results display for now
      scoreOverviewEl.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-gray-100 dark:border-gray-700 p-8 text-center">
          <div class="inline-flex items-center justify-center w-24 h-24 bg-green-500/10 rounded-full mb-6">
            <span class="text-3xl font-bold text-green-600 dark:text-green-400">${data.seo_score || 0}</span>
          </div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">SEO Score</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-6">${data.url}</p>
        </div>
      `;
      
      metaAnalysisEl.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-gray-100 dark:border-gray-700 p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Content Analysis</h3>
          <div class="space-y-3">
            <div><strong>Title:</strong> ${data.title || '<em>Missing</em>'}</div>
            <div><strong>Meta Description:</strong> ${data.meta_description || '<em>Missing</em>'}</div>
            <div><strong>H1:</strong> ${data.h1 || '<em>Missing</em>'}</div>
          </div>
        </div>
      `;
      
      technicalAnalysisEl.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-gray-100 dark:border-gray-700 p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Technical SEO</h3>
          <div class="space-y-3">
            <div><strong>Status Code:</strong> ${data.status_code || 'N/A'}</div>
            <div><strong>Indexable:</strong> ${data.is_indexable ? 'Yes' : 'No'}</div>
            <div><strong>Mobile Friendly:</strong> ${data.is_mobile_friendly ? 'Yes' : 'No'}</div>
          </div>
        </div>
      `;
      
      performanceAnalysisEl.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-gray-100 dark:border-gray-700 p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Performance</h3>
          <div class="space-y-3">
            <div><strong>Performance Score:</strong> ${data.performance_score || 'N/A'}</div>
            <div><strong>LCP:</strong> ${data.lcp || 'N/A'} ms</div>
            <div><strong>CLS:</strong> ${data.cls || 'N/A'}</div>
            <div><strong>INP:</strong> ${data.inp || 'N/A'} ms</div>
          </div>
        </div>
      `;
      
      issuesEl.innerHTML = `
        <div class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-gray-100 dark:border-gray-700 p-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Issues & Recommendations</h3>
          <div class="space-y-3">
            <div class="text-sm text-red-600 dark:text-red-400">Critical Issues: ${data.critical_issues || 0}</div>
            <div class="text-sm text-yellow-600 dark:text-yellow-400">Warnings: ${data.warnings || 0}</div>
            <div class="text-sm text-blue-600 dark:text-blue-400">Recommendations: ${data.recommendations || 0}</div>
          </div>
        </div>
      `;
      
      // Scroll to results
      document.getElementById('results-section').scrollIntoView({ 
        behavior: 'smooth',
        block: 'start'
      });
      
    } catch (err) {
      errorEl.textContent = err.message || 'Something went wrong. Please try again.';
      errorEl.classList.remove('hidden');
    } finally {
      hideLoading();
    }
  });
</script>
